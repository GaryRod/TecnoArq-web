<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <meta http-equiv="X-UA-Compatible" content="ie=edge">
  <link rel="stylesheet" href="css/main.css">
  <link href="https://fonts.googleapis.com/css?family=Cambay|Pacifico" rel="stylesheet">
  <!-- Compiled and minified CSS -->
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/materialize/1.0.0-beta/css/materialize.min.css">
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.css" />
  <title>FisionTech</title>
  <link rel="icon" href="/images/Fision-tech.png">
  <!-- <link rel="icon" href="/icon/whatsapp.png"> -->
  <script src="https://kit.fontawesome.com/bb9a20c193.js" crossorigin="anonymous"></script>
</head>

<body>
  <% marcas.forEach(marca => { %>
    <div class="row container">
        <div class="col s12 m10 offset-m1" id="ServiciosLink">
            <h3><%= marca.nombre %> <button class="button-desple" onclick="toggleCollapsible('collapsible-contentApp')">+</button></h3>
            <div class="collapsible-contentApp">
              <% articulos.filter(articulo => articulo.codigoMarca === marca.codigo).forEach(articulo => {%>
                  <div class="row">
                    <div class="column">
                        <i class="fa fa-dot-circle-o" aria-hidden="true"></i><span> <%= articulo.nombre %></span>
                    </div>
                    <div class="column">
                        <span>$<%= articulo.precio %><span class="espaciado"></span><%= articulo.precioUSD %>USD</span>
                    </div>
                  </div>
                <% }); %>
              <div class="row">
                <div class="column">
                    <i class="fa fa-dot-circle-o" aria-hidden="true"></i><span>Si desea solicitar uno de nuestros productos envíenos un mensaje al Whatsapp</span>
                </div>
              </div>
            </div>
        </div>
    </div>  
  <% }); %>  
    <div class="col s12 center">
      <p style="color: rgb(161, 161, 35);">Copyright 2024 © FISIONTECH | Todos los derechos reservados</p>   
    </div>

  <script src="https://code.jquery.com/jquery-3.3.1.min.js" integrity="sha256-FgpCb/KJQlLNfOu91ta32o/NMZxltwRo8QtmkMRdAu8=" crossorigin="anonymous"></script>
  <!-- Compiled and minified JavaScript -->
  <script src="https://cdnjs.cloudflare.com/ajax/libs/materialize/1.0.0-beta/js/materialize.min.js"></script>
  <script type="text/javascript" src="js/app.js"></script>

</body>

</html>
